@model IEnumerable<FlowersStore.Models.Flower>
@{
    ViewBag.Title = "Adtocart";
}
<br />
<br />
<br />
@foreach (var f in Model)
{
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-4">

                <img style="min-height:200px; width:200px;" src="@Url.Content("~/Content/Images/Flowers/" + f.PictureType)" />
            </div>

            <div class="col-lg-8 col-md-8 col-sm-8">
                <h1>Product Name: @f.Flower_name</h1>
                <h2>Price: @f.Price </h2>

                <input type="number" name="quantity" value="0" id="quantity" />

                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

